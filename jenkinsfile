pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/GChanna21/webapp.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
                sh 'mkdir -p build && cp -r * build/'
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'build/**/*', fingerprint: true
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                sh 'cp -r build/* /var/www/html/'  // Update for your deployment setup
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}

